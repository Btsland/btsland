        <activity
            android:name=".ui.activity.PurseTradingRecordActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.activity.PurseWholeGuadanActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.activity.PurseWalletBackupActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.activity.MarketDetailedActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".ui.activity.NewsContentActivity"
            android:screenOrientation="portrait">
            //注册NewsContentActivity活动
        </activity>
        <activity
            android:name=".ui.activity.AboutUsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.activity.UsersGuidanceActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.activity.VersionInformationActivity"
            android:screenOrientation="portrait">
