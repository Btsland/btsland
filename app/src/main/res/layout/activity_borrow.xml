<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--顶部导航栏-->
    <FrameLayout
        android:id="@+id/fra_borrow_head"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="当前喂价："
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_borrow_feedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3.5698"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_borrow_feedPrice_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CNY/BTS"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="强平触发价："
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_borrow_triggerPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3.5698"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_borrow_triggerPrice_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CNY/BTS"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="抵押比例："
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_borrow_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2.5"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="借入"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="余额："
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_borrow_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="122312"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_borrow_balance_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="CNY"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_white">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/tv_borrow_num1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/edit_text"
                        android:hint="借入金额："
                        android:paddingLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <Spinner
                        android:id="@+id/sp_borrow_type"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/color_white">
                <SeekBar
                    android:id="@+id/sb_Borrow_BorrowNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="保证金"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="可用余额："
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv_borrow_BTSBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="122312"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="BTS"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_white">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/tv_borrow_num2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/edit_text"
                        android:hint="保证金额："
                        android:paddingLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="BTS"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/color_white">
                <SeekBar
                    android:id="@+id/sb_Borrow_BTSNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="友情提示"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1：最低抵押比例为1.75，比例越接近1.75，平仓的可能性越大，建议抵押比例为2.5以上。"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2：当喂价接近平仓价时，为防止平仓可继续加大抵押比例，此时需要更多的保证金。"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_borrow_cancel"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:text="重置"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/btn_transparent"
            />
        <TextView
            android:id="@+id/tv_borrow_btn"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="确定"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:background="@drawable/select_login_btn"
            />
    </LinearLayout>




</LinearLayout>
