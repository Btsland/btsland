<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--顶部导航栏-->
    <FrameLayout
        android:id="@+id/fra_C2C_head"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </FrameLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fra_C2C_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_c2c_cancel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"
                android:padding="2dp">
                <TextView
                    android:id="@+id/tv_exchange_dealerName"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="承兑商昵称："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_dealerName_text"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_dealerName_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_dealerName_text"/>
                <TextView
                    android:id="@+id/tv_exchange_dealerName_text"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="比特大陆"
                    android:background="@drawable/row_bottom_border"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_dealerName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_exchange_dealerId_text"/>
                <TextView
                    android:id="@+id/tv_exchange_dealerId"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="承兑商帐号："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_dealerId_text"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_dealerId_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_dealerId_text"/>
                <TextView
                    android:id="@+id/tv_exchange_dealerId_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Btsland001"
                    android:background="@drawable/row_bottom_border"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_dealerId"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_dealerName_text"
                    app:layout_constraintBottom_toTopOf="@+id/lv_exchange_type_text"/>
                <TextView
                    android:id="@+id/tv_exchange_type"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="top|right"
                    android:paddingTop="10dp"
                    android:text="承兑商&#160;&#160;&#8201;&#160;&#160;&#8201;\n收款帐号："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lv_exchange_type_text"
                    app:layout_constraintTop_toTopOf="@+id/lv_exchange_type_text"
                    app:layout_constraintBottom_toBottomOf="@+id/lv_exchange_type_text"/>
                <ListView
                    android:id="@+id/lv_exchange_type_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_type"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_dealerId_text"
                    app:layout_constraintBottom_toTopOf="@+id/tv_exchange_noteNo_text"/>
                <TextView
                    android:id="@+id/tv_exchange_noteNo"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="流水号："
                    android:visibility="gone"
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_noteNo_text"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_noteNo_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_noteNo_text"/>
                <TextView
                    android:id="@+id/tv_exchange_noteNo_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="2017121965658"
                    android:visibility="gone"
                    android:background="@drawable/row_bottom_border"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_noteNo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lv_exchange_type_text"
                    app:layout_constraintBottom_toTopOf="@+id/tv_exchange_quote_text"/>
                <TextView
                    android:id="@+id/tv_exchange_quote"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="目标资产："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_quote_text"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_quote_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_quote_text"/>
                <TextView
                    android:id="@+id/tv_exchange_quote_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="CNY"
                    android:background="@drawable/row_bottom_border"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_quote"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_noteNo_text"
                    app:layout_constraintBottom_toTopOf="@+id/tv_exchange_brokerage_text"/>
                <TextView
                    android:id="@+id/tv_exchange_brokerage"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="手续费："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_brokerage_text"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_brokerage_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_brokerage_text"/>
                <TextView
                    android:id="@+id/tv_exchange_brokerage_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="0.5%"
                    android:background="@drawable/row_bottom_border"
                    android:textColor="@color/color_font_blue"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_brokerage"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_quote_text"
                    app:layout_constraintBottom_toTopOf="@+id/tv_exchange_remarkCode"/>
                <TextView
                    android:id="@+id/tv_exchange_remarkCode"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="充值码："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@+id/tv_exchange_brokerage"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_remarkCode_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_remarkCode_text"/>
                <View
                    android:id="@+id/tv_exchange_remarkCode_back"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_remarkCode"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_brokerage_text"
                    app:layout_constraintBottom_toTopOf="@+id/tv_exchange_pay_text"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_exchange_remarkCode_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="qWTfeA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_font_red"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_exchange_remarkCode_back"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_remarkCode_back"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_remarkCode_back"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_remarkCode_text_copy"/>
                <TextView
                    android:id="@+id/tv_exchange_remarkCode_text_copy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/image_copy"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_remarkCode_back"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_remarkCode_back"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_remarkCode_text"/>
                <TextView
                    android:id="@+id/tv_exchange_pay"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center|right"
                    android:text="付款方式："
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_exchange_pay_back"
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_pay_text"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_pay_text"/>
                <View
                    android:id="@+id/tv_exchange_pay_back"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/row_bottom_border"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_pay"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_remarkCode"
                    app:layout_constraintBottom_toTopOf="@+id/ed_exchange_aspect_text"/>
                <Spinner
                    android:id="@+id/tv_exchange_pay_text"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="付款方式："
                    app:layout_constraintTop_toTopOf="@+id/tv_exchange_pay_back"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_exchange_pay_back"
                    app:layout_constraintRight_toRightOf="@+id/tv_exchange_pay_back"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_exchange_pay_back"/>
                <TextView
                    android:id="@+id/tv_exchange_aspect"
                    app:layout_constraintHorizontal_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center|right"
                    android:text="充值额度："
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/ed_exchange_aspect_text"
                    app:layout_constraintTop_toTopOf="@+id/ed_exchange_aspect_text"
                    app:layout_constraintBottom_toBottomOf="@+id/ed_exchange_aspect_text"/>
                <EditText
                    android:id="@+id/ed_exchange_aspect_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/edit_text"
                    android:layout_margin="5dp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_aspect"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_exchange_pay_text"
                    app:layout_constraintBottom_toTopOf="@+id/ed_exchange_remark_text"/>
                <TextView
                    android:id="@+id/tv_exchange_remark"
                    app:layout_constraintHorizontal_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="top|right"
                    android:text="备注："
                    android:paddingTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/ed_exchange_remark_text"
                    app:layout_constraintTop_toTopOf="@+id/ed_exchange_remark_text"
                    app:layout_constraintBottom_toBottomOf="@+id/ed_exchange_remark_text"/>
                <EditText
                    android:id="@+id/ed_exchange_remark_text"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:gravity="top|left"
                    android:lines="3"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text"
                    app:layout_constraintLeft_toRightOf="@+id/tv_exchange_remark"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_exchange_aspect_text"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="注意\n1：CNY:RMB为1:1(1CNY=1元)，确认订单后需用户线下将同等额度的人民币转到承兑商提供的收款账户，平台不提供转账途径。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2：确认订单后务必在30分钟内完成先下转账并在我的充值页面确认转账，如过期则视超时处理。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3：线下转账时务必将充值码做为备注进行转账，充值码将做为承兑商核对线下来款的依据，也是发生纠纷的唯一依据。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4：如按规范完成操作时承兑商无法完成转账，平台代承兑商完成转账。"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5：交易为线下交易，平台除代币流通手续费外不收取任何手续费。"/>
        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/tv_c2c_cancel"
        android:gravity="center"
        android:text="联系"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:layout_constraintHorizontal_weight="4"
        android:background="@drawable/btn_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_c2c_confirm"/>
    <TextView
        android:id="@+id/tv_c2c_confirm"
        android:gravity="center"
        android:layout_width="0dp"
        android:text="确认充值"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:layout_constraintHorizontal_weight="6"
        android:background="@drawable/btn_green"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_c2c_cancel"/>
</android.support.constraint.ConstraintLayout>
