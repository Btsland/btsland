<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!-- android:singleLine设置为True表示让这个TextView只能单行显示 -->
    <!-- android:ellipsize 设定当文本内容超出控件宽度时，文本的缩略方式，这里指定成end表示在尾部进行缩略 -->

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/news_title"
        />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/news_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/news_date"
        android:layout_below="@+id/news_title"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:textColor="#757575"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/news_title"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/news_titlecontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="12dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="2dp"
        android:maxLines="3"
        android:textColor="#000000"
        android:lineSpacingExtra="2dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_below="@+id/news_date"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/news_titlecontent"
        android:background="#E0E0E0"
        android:layout_height="8dp"
        />

</RelativeLayout>
</LinearLayout>