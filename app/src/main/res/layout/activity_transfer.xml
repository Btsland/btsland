<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white2">
    <!--顶部导航栏-->
    <FrameLayout
        android:id="@+id/fra_transfer_set_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </FrameLayout>
    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_from"
        android:textColor="@color/color_Grey"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fra_transfer_set_head"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <WebView
        android:id="@+id/wv_pho_from"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_from"/>
    <EditText
        android:id="@+id/ed_transfer_from"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:textColor="@color/color_Grey"
        android:background="@drawable/edit_text"
        app:layout_constraintTop_toTopOf="@+id/wv_pho_from"
        app:layout_constraintLeft_toRightOf="@+id/wv_pho_from"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/wv_pho_from"/>
    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_to"
        android:textColor="@color/color_Grey"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wv_pho_from"/>
    <WebView
        android:id="@+id/wv_pho_to"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_to"/>
    <EditText
        android:id="@+id/ed_transfer_to"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:textColor="@color/color_Grey"
        android:background="@drawable/edit_text"
        app:layout_constraintTop_toTopOf="@+id/wv_pho_to"
        app:layout_constraintLeft_toRightOf="@+id/wv_pho_to"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/wv_pho_to"/>
    <TextView
        android:id="@+id/tv_transfer_to_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="@color/color_lightGrey"
        app:layout_constraintTop_toTopOf="@+id/ed_transfer_to"
        app:layout_constraintRight_toRightOf="@+id/ed_transfer_to"
        app:layout_constraintBottom_toBottomOf="@+id/ed_transfer_to"/>
    <TextView
        android:id="@+id/tv_transfer_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_asset"
        android:textColor="@color/color_Grey"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wv_pho_to"/>

    <Spinner
        android:id="@+id/sp_transfer_coin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:spinnerMode="dropdown"
        android:gravity="center"
        android:backgroundTint="@color/color_Grey"
        android:textColor="@color/color_Grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_coin"/>

    <EditText
        android:id="@+id/ed_transfer_coinNum"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:textColor="@color/color_Grey"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text"
        app:layout_constraintTop_toTopOf="@+id/sp_transfer_coin"
        app:layout_constraintLeft_toRightOf="@+id/sp_transfer_coin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/sp_transfer_coin"/>
    <TextView
        android:id="@+id/tv_transfer_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_balance"
        android:textColor="@color/color_Grey"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_transfer_coin"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_transfer_balanceNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textColor="@color/color_Grey"
        app:layout_constraintLeft_toRightOf="@+id/tv_transfer_balance"
        app:layout_constraintTop_toTopOf="@+id/tv_transfer_balance"/>
    <TextView
        android:id="@+id/tv_transfer_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_Grey"
        app:layout_constraintTop_toBottomOf="@+id/sp_transfer_coin"
        app:layout_constraintRight_toRightOf="@+id/ed_transfer_coinNum"/>
    <TextView
        android:id="@+id/tv_transfer_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_remarks"
        android:textColor="@color/color_Grey"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_balance"/>
    <EditText
        android:id="@+id/tv_transfer_remark_text"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@color/color_Grey"
        android:paddingLeft="20dp"
        android:background="@drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_remark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_transfer_send"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="@string/str_confirm"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@color/color_Grey"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_remark_text"
        app:layout_constraintLeft_toRightOf="@+id/tv_transfer_cancel"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_green"/>
    <TextView
        android:id="@+id/tv_transfer_cancel"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="@string/str_cancel"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="@color/color_Grey"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_remark_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/btn_transparent"/>
    <TextView
        android:id="@+id/tv_transfer_second"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_transfer_msg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_font_red"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_transfer_msg"/>
    <TextView
        android:id="@+id/tv_transfer_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="秒后将发起转账，请仔细确认您的转账信息，如有错误，请点击取消按钮可撤回本次转账，一旦发起转账，将无法撤回！如确认无误，可再次点击确认按钮，系统将立即发起转账。"
        android:layout_margin="10dp"
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toRightOf="@+id/tv_transfer_second"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_transfer_send"/>
</android.support.constraint.ConstraintLayout>
