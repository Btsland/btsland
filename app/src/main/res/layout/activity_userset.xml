<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <!--顶部导航栏-->
    <FrameLayout
        android:id="@+id/fra_userset_head"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </FrameLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:id="@+id/userset_table"
        app:layout_constraintTop_toBottomOf="@+id/fra_userset_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lv_userset">
        <TextView
            android:id="@+id/tv_asset"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="资产"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_scaledValue"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="换算值"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_supplyShare"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="供给占比"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_transferAccounts"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="转账操作"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_MarketOperation"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="市场操作"
            android:textSize="15sp"
            />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_userset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/userset_table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>












