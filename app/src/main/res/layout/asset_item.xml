<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="#00000000"
    tools:context="info.btsland.app.ui.activity.UserActivity"
    >

<TextView
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="#99ffffff"
    android:layout_margin="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
 <TextView
     android:id="@+id/tv_asset_coin"
     android:layout_width="0dp"
     android:layout_height="40dp"
     android:textSize="20sp"
     android:textStyle="bold"
     android:textColor="@color/black"
     android:gravity="center"
     app:layout_constraintTop_toTopOf="@+id/view"
     app:layout_constraintLeft_toLeftOf="@+id/view"
     app:layout_constraintRight_toRightOf="@+id/view"
    />






  <TextView
      android:id="@+id/tv_all_asset"
      android:layout_width="0dp"
      android:layout_height="20dp"
      android:text="资产"
      android:textSize="16sp"
      android:textColor="@color/black"
      app:layout_constraintTop_toBottomOf="@+id/tv_asset_coin"
      app:layout_constraintLeft_toLeftOf="@+id/view"
      app:layout_constraintRight_toLeftOf="@+id/tv_asset_num"
      android:layout_marginLeft="10dp"
      />

  <TextView
      android:id="@+id/tv_asset_num"
      android:layout_width="0dp"
      android:layout_height="20dp"
      android:gravity="left"
      android:text="0.00000"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintLeft_toRightOf="@+id/tv_all_asset"
      app:layout_constraintRight_toLeftOf="@+id/tv_borrow"
      app:layout_constraintTop_toBottomOf="@+id/tv_asset_coin"

      />

    <TextView
        android:id="@+id/tv_borrow"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="借入"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_table_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_asset_coin"
        app:layout_constraintLeft_toRightOf="@+id/tv_asset_num"
        app:layout_constraintRight_toRightOf="@+id/view"
        />



    <TextView
        android:id="@+id/tv_orders"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="挂单"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_all_asset"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toLeftOf="@+id/tv_orders_num"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_orders_num"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="0.0000"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/tv_asset_num"
        app:layout_constraintLeft_toRightOf="@+id/tv_orders"
        app:layout_constraintRight_toLeftOf="@+id/tv_orders_handle"
        />

    <TextView
        android:id="@+id/tv_orders_handle"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="操作"
        android:textSize="16sp"
        android:textColor="@color/color_table_blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_all_asset"
        app:layout_constraintLeft_toRightOf="@+id/tv_orders_num"
        app:layout_constraintRight_toRightOf="@+id/view"

        />


    <TextView
        android:id="@+id/tv_usable_asset"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="可用"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/tv_orders"
        app:layout_constraintRight_toLeftOf="@+id/tv_usable_asset_num"
        />

    <TextView
        android:id="@+id/tv_usable_asset_num"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="left"
        android:text="0.0000"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/tv_usable_asset"
        app:layout_constraintRight_toLeftOf="@+id/tv_recharge_withdrawals"
        app:layout_constraintTop_toBottomOf="@+id/tv_orders_num"
        />

    <TextView
        android:id="@+id/tv_recharge_withdrawals"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="充提"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/color_table_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_orders"
        app:layout_constraintLeft_toRightOf="@+id/tv_usable_asset_num"
        app:layout_constraintRight_toRightOf="@+id/view"
        />








    <TextView
        android:id="@+id/tv_transfer"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="转账"
        android:gravity="center"
        android:textColor="@color/color_Grey"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_usable_asset"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toLeftOf="@+id/tv_transaction"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_transaction"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="交易"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/color_Grey"
        app:layout_constraintTop_toBottomOf="@+id/tv_usable_asset"
        app:layout_constraintLeft_toRightOf="@+id/tv_transfer"
        app:layout_constraintRight_toRightOf="@+id/view"
        android:layout_marginRight="10dp"
        />











</android.support.constraint.ConstraintLayout>