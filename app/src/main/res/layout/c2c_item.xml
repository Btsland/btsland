<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="5dp"
    android:background="@drawable/edit_text">
    <View
        android:id="@+id/v_c2c_item_top"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v_c2c_item_body"/>
    <TextView
        android:id="@+id/tv_c2c_item_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxWidth="160dp"
        android:text="比特大陆超级无敌"
        android:lines="1"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="@+id/v_c2c_item_top"
        app:layout_constraintLeft_toLeftOf="@+id/v_c2c_item_top"
        app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_depict"/>
    <TextView
        android:id="@+id/tv_c2c_item_depict"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:maxWidth="270dp"
        android:textSize="14sp"
        android:text="充值秒到账，欢迎使用。"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/v_c2c_item_top"
        app:layout_constraintBottom_toBottomOf="@+id/v_c2c_item_top"
        app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_name"/>
    <TextView
        android:id="@+id/tv_c2c_item_contact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/image_contact"
        app:layout_constraintTop_toTopOf="@+id/tv_c2c_item_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_c2c_item_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_name"/>
    <TextView
        android:id="@+id/tv_c2c_item_brokerage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="手续费："
        android:layout_marginRight="5dp"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_brokerage_num"/>
    <TextView
        android:id="@+id/tv_c2c_item_brokerage_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="0.5%"
        android:textColor="@color/color_font_blue"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_level"/>
    <TextView
        android:id="@+id/tv_c2c_item_level"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@+id/v_c2c_item_top"
        app:layout_constraintRight_toRightOf="@+id/v_c2c_item_top"
        app:layout_constraintBottom_toBottomOf="@+id/v_c2c_item_top"/>
    <TextView
        android:id="@+id/tv_c2c_item_stat"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="在线中"
        android:textColor="@color/color_green"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/v_c2c_item_top"
        app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_level"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintTop_toBottomOf="@+id/v_c2c_item_top"
        android:background="@color/color_frenchGrey"/>
    <View
        android:id="@+id/v_c2c_item_body"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_c2c_item_top"
        app:layout_constraintBottom_toTopOf="@+id/v_c2c_item_bottom"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintBottom_toTopOf="@+id/v_c2c_item_bottom"
        android:background="@color/color_frenchGrey"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_c2c_item_body_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_c2c_item_body"
        app:layout_constraintTop_toTopOf="@+id/v_c2c_item_body"
        app:layout_constraintBottom_toBottomOf="@+id/v_c2c_item_body"
        app:layout_constraintRight_toLeftOf="@+id/cl_c2c_item_body_right">

        <TextView
            android:id="@+id/tv_c2c_item_max"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="最大额度："
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_max_num"
            app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_usable"/>
        <TextView
            android:id="@+id/tv_c2c_item_max_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="5220323.120232"
            android:gravity="center|left"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color_font_blue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_max"
            app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_usable_num"/>
        <TextView
            android:id="@+id/tv_c2c_item_usable"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="可兑额度："
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_max"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_usable_num"
            app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_having"/>
        <TextView
            android:id="@+id/tv_c2c_item_usable_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="5103232.3623"
            android:gravity="center|left"
            android:textColor="@color/color_green"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_max_num"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_usable"
            app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_having_num"/>
        <TextView
            android:id="@+id/tv_c2c_item_having"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="进行中："
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_usable"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_having_num"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_c2c_item_having_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="117090.757932"
            android:gravity="center|left"
            android:textColor="@color/color_frenchGrey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_usable_num"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_having"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_c2c_item_body_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/v_c2c_item_body"
        app:layout_constraintRight_toRightOf="@+id/v_c2c_item_body"
        app:layout_constraintBottom_toBottomOf="@+id/v_c2c_item_body"
        app:layout_constraintLeft_toRightOf="@+id/cl_c2c_item_body_left">
        <TextView
            android:id="@+id/tv_c2c_item_account"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="资金帐号："
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_account_no"
            app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_lower"/>
        <TextView
            android:id="@+id/tv_c2c_item_account_no"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="btsland"
            android:gravity="center|left"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_font_blue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_c2c_item_account"
            app:layout_constraintBottom_toBottomOf="@+id/tv_c2c_item_account"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_account"/>
        <TextView
            android:id="@+id/tv_c2c_item_lower"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="下限："
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_account"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_lower_num"
            app:layout_constraintBottom_toTopOf="@+id/tv_c2c_item_time"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_c2c_item_lower_num"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center|left"
            android:text="1000"
            android:textSize="20sp"
            android:textColor="@color/color_font_red"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_lower"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_c2c_item_lower"
            app:layout_constraintBottom_toBottomOf="@+id/tv_c2c_item_lower"/>
        <TextView
            android:id="@+id/tv_c2c_item_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="平均完成时间："
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_time_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_lower"/>
        <TextView
            android:id="@+id/tv_c2c_item_time_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="5"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_black"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_time"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_time_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_c2c_item_time"
            app:layout_constraintTop_toTopOf="@+id/tv_c2c_item_time"/>
        <TextView
            android:id="@+id/tv_c2c_item_time_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="分钟"
            android:gravity="center|left"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_time_num"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_c2c_item_time"
            app:layout_constraintBottom_toBottomOf="@+id/tv_c2c_item_time"/>
    </android.support.constraint.ConstraintLayout>
    <View
        android:id="@+id/v_c2c_item_bottom"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_c2c_item_body"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_c2c_item_bottom_left"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cl_c2c_item_bottom_right">
        <LinearLayout
            android:id="@+id/ll_c2c_item_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_c2c_item_zfb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/zfb"
                android:visibility="visible"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_c2c_item_wx"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/wx"
                android:visibility="visible"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_c2c_item_yh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/yh"
                android:visibility="visible"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_c2c_item_bottom_right"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cl_c2c_item_bottom_left">
        <TextView
            android:id="@+id/tv_c2c_item_count"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="交易总数"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_total"/>
        <TextView
            android:id="@+id/tv_c2c_item_count_num"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="5265"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_count"
            app:layout_constraintRight_toLeftOf="@+id/tv_c2c_item_total_num"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_c2c_item_total"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:text="交易总额"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_c2c_item_total_num"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:text="52292325.323"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_c2c_item_count_num"
            app:layout_constraintTop_toBottomOf="@+id/tv_c2c_item_total"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>