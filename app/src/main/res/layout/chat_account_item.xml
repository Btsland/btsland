<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/color_white">
    <WebView
        android:id="@+id/wb_chat_account_item_pho"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_chat_account_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xjh1010"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/wb_chat_account_item_pho"
        app:layout_constraintLeft_toRightOf="@+id/wb_chat_account_item_pho"
        app:layout_constraintBottom_toTopOf="@+id/tv_chat_account_item_chat"/>
    <TextView
        android:id="@+id/tv_chat_account_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:32"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_account_item_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_account_item_name"/>
    <TextView
        android:id="@+id/tv_chat_account_item_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="测试测试测试测试测试测试"
        android:maxLines="1"
        android:maxWidth="260dp"
        app:layout_constraintBottom_toBottomOf="@id/wb_chat_account_item_pho"
        app:layout_constraintLeft_toRightOf="@+id/wb_chat_account_item_pho"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_account_item_name"/>
    <TextView
        android:id="@+id/tv_chat_account_item_point"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="2"
        android:visibility="gone"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/color_white"
        android:background="@drawable/tv_detai_touch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_chat_account_item_chat"
        app:layout_constraintBottom_toBottomOf="@id/tv_chat_account_item_chat"/>
</android.support.constraint.ConstraintLayout>