<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <WebView
        android:id="@+id/wb_chat_item_pho"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="WebViewLayout">
    </WebView>
    <TextView
        android:id="@+id/tv_chat_item_level"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/level1"
        app:layout_constraintTop_toTopOf="@+id/wb_chat_item_pho"
        app:layout_constraintLeft_toRightOf="@+id/wb_chat_item_pho"
        app:layout_constraintBottom_toBottomOf="@+id/wb_chat_item_pho"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/tv_chat_item_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btsland"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_item_level"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_item_level"
        app:layout_constraintLeft_toRightOf="@+id/tv_chat_item_level"/>
    <TextView
        android:id="@+id/tv_chat_item_context"
        android:layout_width="wrap_content"
        android:maxWidth="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/edit_text"
        android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
        app:layout_constraintTop_toBottomOf="@+id/tv_chat_item_level"
        app:layout_constraintLeft_toRightOf="@+id/wb_chat_item_pho"/>
</android.support.constraint.ConstraintLayout>