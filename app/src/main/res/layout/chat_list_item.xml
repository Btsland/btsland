<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_chat_item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp">
        <WebView
            android:id="@+id/wb_chat_item_pho_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_chat_item_level_left"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="WebViewLayout">
        </WebView>
        <TextView
            android:id="@+id/tv_chat_item_level_left"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@mipmap/level1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@+id/wb_chat_item_pho_left"
            app:layout_constraintLeft_toLeftOf="@+id/wb_chat_item_pho_left"
            app:layout_constraintBottom_toTopOf="@+id/wb_chat_item_pho_left"/>
        <TextView
            android:id="@+id/tv_chat_item_account_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btsland"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/wb_chat_item_pho_left"
            app:layout_constraintLeft_toRightOf="@+id/wb_chat_item_pho_left"/>
        <TextView
            android:id="@+id/tv_chat_item_context_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:maxWidth="210dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat_item_time_left"
            app:layout_constraintLeft_toRightOf="@+id/wb_chat_item_pho_left"
            android:textColor="@color/black"
            android:background="@drawable/chat_edit_text"
            android:text="测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试"/>
        <TextView
            android:id="@+id/tv_chat_item_time_left"
            android:layout_width="wrap_content"
            android:text="2017-12-13 13:25"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat_item_account_left"
            app:layout_constraintLeft_toRightOf="@+id/wb_chat_item_pho_left"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_chat_item_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp">
        <WebView
            android:id="@+id/wb_chat_item_pho_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat_item_level_right"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="WebViewLayout">
        </WebView>
        <TextView
            android:id="@+id/tv_chat_item_level_right"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@mipmap/level1"
            app:layout_constraintRight_toRightOf="@+id/wb_chat_item_pho_right"
            app:layout_constraintLeft_toLeftOf="@+id/wb_chat_item_pho_right"
            app:layout_constraintBottom_toTopOf="@+id/wb_chat_item_pho_right"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/tv_chat_item_account_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btsland"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@+id/wb_chat_item_pho_right"
            app:layout_constraintRight_toLeftOf="@+id/wb_chat_item_pho_right"/>
        <TextView
            android:id="@+id/tv_chat_item_context_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:maxWidth="210dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat_item_time_right"
            app:layout_constraintRight_toLeftOf="@+id/wb_chat_item_pho_right"
            android:textColor="@color/black"
            android:background="@drawable/chat_edit_text"
            android:text="测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试测试试测试"/>
        <TextView
            android:id="@+id/tv_chat_item_time_right"
            android:layout_width="wrap_content"
            android:text="2017-12-13 13:25"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat_item_account_right"
            app:layout_constraintRight_toLeftOf="@+id/wb_chat_item_pho_right"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

