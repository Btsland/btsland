<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView
        android:id="@+id/tv_dealer_having_item_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12346678932"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dealer_having_item_code"/>
    <TextView
        android:id="@+id/tv_dealer_having_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AEsaKH"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/color_font_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_having_item_pay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dealer_having_item_remark"/>
    <TextView
        android:id="@+id/tv_dealer_having_item_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="老板常客哦，给点优惠咯"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_having_item_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_dealer_having_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textStyle="bold"
        android:textColor="@color/color_font_red"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@+id/tv_dealer_having_item_coin"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_having_item_coin"
        app:layout_constraintRight_toLeftOf="@+id/tv_dealer_having_item_coin"/>
    <TextView
        android:id="@+id/tv_dealer_having_item_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CNY"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dealer_having_item_stat"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_dealer_having_item_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户已转账"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_having_item_coin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dealer_having_item_time"/>
    <TextView
        android:id="@+id/tv_dealer_having_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2分钟前"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_having_item_stat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>