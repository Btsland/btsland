<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView
        android:id="@+id/tv_dealer_info_item_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="btsland001"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dealer_info_item_hint"/>
    <TextView
        android:id="@+id/tv_dealer_info_item_hint"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="有订单"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_info_item_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_dealer_info_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="7"
        android:gravity="center"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:background="@drawable/btn_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_dealer_info_item_time"/>
    <TextView
        android:id="@+id/tv_dealer_info_item_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="12:32"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealer_info_item_num"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>