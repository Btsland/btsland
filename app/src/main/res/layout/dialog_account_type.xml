<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_dialog"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_account_types_dialog_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/please_enter_password"
        android:textColor="@color/color_black"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名："
            android:gravity="center"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/ed_account_types_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_account_types_dialog_nameHint"
        android:layout_width="match_parent"
        android:text="请输入姓名"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="帐号："
            android:gravity="center"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/ed_account_types_dialog_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:layout_margin="5dp"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_account_types_dialog_noHint"
        android:layout_width="match_parent"
        android:text="请输入帐号"
        android:gravity="center"
        android:textColor="@color/red"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="类型："
            android:gravity="center"/>
        <Spinner
            android:id="@+id/sp_account_types_dialog_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_account_types_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="银行名称："
                android:gravity="center"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/ed_account_types_dialog_typeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/edit_text"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入银行简称，如“农业银行，工商银行。。。”"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="银行详情："
                android:gravity="center"/>
            <EditText
                android:id="@+id/ed_account_types_dialog_depict"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入银行卡开户信息（银行详细信息）"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_account_types_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_frenchGrey"
            android:background="@drawable/select_dialog_btn"
            android:textSize="16sp" />
        <TextView
            android:layout_width="1px"
            android:background="@color/color_frenchGrey"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_account_types_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/color_frenchGrey"
            android:background="@drawable/select_dialog_btn"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>