<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_dialog"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_app_list_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="标题"
        android:background="@drawable/select_dialog_btn"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/color_frenchGrey"/>
    <ListView
        android:id="@+id/lv_app_list_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <TextView
        android:id="@+id/tv_app_list_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="取消"
        android:background="@drawable/select_dialog_btn"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/color_frenchGrey"
        />
</LinearLayout>