<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_dialog"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_app_dialog_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:text="提示"
        android:textColor="@color/color_black"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/tv_app_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="请仔细确认是否收到了用户的转账，为了防止误操作，请输入“确认已收款”"
        android:textColor="@color/color_font_red"/>
    <EditText
        android:id="@+id/ed_app_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text"/>
    <TextView
        android:id="@+id/tv_app_dialog_point"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:textColor="@color/color_font_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_app_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_frenchGrey"
            android:background="@drawable/select_dialog_btn"
            android:textSize="16sp" />
        <TextView
            android:layout_width="1px"
            android:background="@color/color_frenchGrey"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_app_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/color_frenchGrey"
            android:background="@drawable/select_dialog_btn"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>