<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/edit_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/iv_dealer_manage_pho"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/level1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_dealer_manage_dealerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintLeft_toRightOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_dealerId"/>
        <TextView
            android:id="@+id/tv_dealer_manage_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_green"
            app:layout_constraintTop_toTopOf="@id/tv_dealer_manage_dealerName"
            app:layout_constraintLeft_toRightOf="@+id/tv_dealer_manage_dealerName"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_dealerName"/>
        <TextView
            android:id="@+id/tv_dealer_manage_inLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现下限"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_inLowNum"/>
        <TextView
            android:id="@+id/tv_dealer_manage_inLowNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_inLow"
            app:layout_constraintRight_toLeftOf="@+id/tv_dealer_manage_inLow_coin"
            app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_outLow"/>
        <TextView
            android:id="@+id/tv_dealer_manage_inLow_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNY"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dealer_manage_inLowNum"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_inLowNum"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_dealer_manage_outLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值下限"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_inLowNum"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_outLowNum"/>
        <TextView
            android:id="@+id/tv_dealer_manage_outLowNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_outLow"
            app:layout_constraintBottom_toBottomOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintRight_toLeftOf="@+id/tv_dealer_manage_outLow_coin"/>
        <TextView
            android:id="@+id/tv_dealer_manage_outLow_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RMB"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dealer_manage_outLowNum"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_outLowNum"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_dealer_manage_dealerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_dealerName"
            app:layout_constraintLeft_toRightOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_inBro"/>
        <TextView
            android:id="@+id/tv_dealer_manage_inBro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值手续费："
            android:gravity="center"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_dealerId"
            app:layout_constraintLeft_toRightOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_outBro"/>
        <TextView
            android:id="@+id/tv_dealer_manage_inBroNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_font_blue"
            app:layout_constraintTop_toTopOf="@+id/tv_dealer_manage_inBro"
            app:layout_constraintLeft_toRightOf="@+id/tv_dealer_manage_inBro"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_inBro"/>
        <TextView
            android:id="@+id/tv_dealer_manage_outBro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现手续费："
            android:gravity="center"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_inBro"
            app:layout_constraintBottom_toBottomOf="@+id/iv_dealer_manage_pho"/>
        <TextView
            android:id="@+id/tv_dealer_manage_outBroNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_font_blue"
            app:layout_constraintTop_toTopOf="@+id/tv_dealer_manage_outBro"
            app:layout_constraintLeft_toRightOf="@+id/tv_dealer_manage_outBro"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_outBro"/>
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/nb_dealer_manage_level"
            android:layout_width="0dp"
            android:layout_height="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintRight_toRightOf="@+id/iv_dealer_manage_pho"
            app:layout_constraintBottom_toBottomOf="@+id/iv_dealer_manage_pho"/>
        <TextView
            android:id="@+id/tv_dealer_manage_depict"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:gravity="center|left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_dealer_manage_timeLeft"
            app:layout_constraintBottom_toTopOf="@+id/ll_dealer_manage_bottom"
            app:layout_constraintTop_toBottomOf="@+id/iv_dealer_manage_pho"/>
        <TextView
            android:id="@+id/tv_dealer_manage_timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平均"
            android:layout_marginRight="2dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/tv_dealer_manage_depict"
            app:layout_constraintRight_toLeftOf="@+id/tv_dealer_manage_timeNum"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_depict"/>
        <TextView
            android:id="@+id/tv_dealer_manage_timeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="@id/tv_dealer_manage_depict"
            app:layout_constraintRight_toLeftOf="@+id/tv_dealer_manage_timeRight"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_depict"/>
        <TextView
            android:id="@+id/tv_dealer_manage_timeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟响应"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@id/tv_dealer_manage_depict"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dealer_manage_depict"/>
        <LinearLayout
            android:id="@+id/ll_dealer_manage_bottom"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3">
                <LinearLayout
                    android:id="@+id/cl_dealer_manage_bottomLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_dealer_manage_wx"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/wx"/>
                    <TextView
                        android:id="@+id/tv_dealer_manage_zfb"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/zfb" />
                    <TextView
                        android:id="@+id/tv_dealer_manage_yh"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/yh"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_dealer_manage_bottomRight"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="7"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tv_dealer_manage_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="承兑总数"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_countNum"/>
                <TextView
                    android:id="@+id/tv_dealer_manage_countNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_count"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_dealer_manage_count"
                    app:layout_constraintRight_toRightOf="@+id/tv_dealer_manage_count"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_dealer_manage_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值总额"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_dealer_manage_count"
                    app:layout_constraintRight_toLeftOf="@+id/tv_dealer_manage_out"
                    app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_inNum"/>
                <TextView
                    android:id="@+id/tv_dealer_manage_inNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_in"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_dealer_manage_in"
                    app:layout_constraintRight_toRightOf="@+id/tv_dealer_manage_in"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tv_dealer_manage_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现总额"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_dealer_manage_outNum"/>
                <TextView
                    android:id="@+id/tv_dealer_manage_outNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dealer_manage_out"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_dealer_manage_out"
                    app:layout_constraintRight_toRightOf="@+id/tv_dealer_manage_out"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_dealer_stat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="在线状态"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="账户信息"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_real"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="收款帐号"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_having"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="进行中订单"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_clinch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="已完成订单"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_help"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="我的客服"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="我的用户"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
