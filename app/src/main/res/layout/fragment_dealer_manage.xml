<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_dealer_stat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="在线状态"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="账户信息"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_real"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="收款帐号"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_having"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="进行中订单"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_clinch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="已完成订单"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_help"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="我的客服"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/tv_dealer_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="我的用户"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:background="@drawable/select_row_white"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/image_arrow_right"
                android:drawableLeft="@drawable/image_purse_allpurse"
                android:drawablePadding="10dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
