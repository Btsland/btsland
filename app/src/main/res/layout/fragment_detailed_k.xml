<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_hoar">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/v_detailed_head"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </android.support.constraint.ConstraintLayout>



    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/cbc_detailed_K"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@+id/v_detailed_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_detailed_foot_5M"/>
    <TextView
        android:id="@+id/tv_detailed_foot_5M"
        android:layout_height="40dp"
        android:layout_width="50dp"
        android:text="5M"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/select_row"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/tv_detailed_foot_1H"
        android:layout_height="40dp"
        android:layout_width="50dp"
        android:text="1H"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/select_row"
        app:layout_constraintLeft_toRightOf="@+id/tv_detailed_foot_5M"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/tv_detailed_foot_1D"
        android:layout_height="40dp"
        android:layout_width="50dp"
        android:text="1D"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/select_row"
        app:layout_constraintLeft_toRightOf="@+id/tv_detailed_foot_1H"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp" />
</android.support.constraint.ConstraintLayout>
