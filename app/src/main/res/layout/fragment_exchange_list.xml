<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_excNote_having_hint"
                android:layout_width="wrap_content"
                android:text="进行中"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_excNote_having"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:padding="5dp"
                android:visibility="gone">
                <ListView
                    android:id="@+id/lv_excNote_having"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_excNote_clinch_hint"
                android:layout_width="wrap_content"
                android:text="已完成"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/ll_excNote_clinch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:padding="5dp"
                android:visibility="gone">
                <ListView
                    android:id="@+id/lv_excNote_clinch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_excNote_bottom"
                android:gravity="center"
                android:text="查看更多"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
