<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">
    <!--K图部分-->
    <FrameLayout
        android:id="@+id/fra_market_simple"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_market_coins"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fra_market_simple"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_market_left_coin1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CNY"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_market_left_coin2"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BTS"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_market_left_coin3"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="USD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_market_left_coin4"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BTC"
            android:textSize="16sp" />
    </LinearLayout>



    <ListView
        android:id="@+id/lv_market_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/ll_market_coins"
        app:layout_constraintTop_toBottomOf="@+id/fra_market_simple"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </ListView>
</android.support.constraint.ConstraintLayout>
