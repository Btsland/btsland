        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"/>-->
    <!--交易对-->
    <TextView
        android:id="@+id/tv_market_left_coin1"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="CNY"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/color_darkGrey"
        app:layout_constraintTop_toBottomOf="@+id/K"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_market_left_coin2"/>
    <TextView
        android:id="@+id/tv_market_left_coin2"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="BTS"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/color_darkGrey"
        app:layout_constraintTop_toBottomOf="@+id/tv_market_left_coin1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_market_left_coin3"/>
    <TextView
        android:id="@+id/tv_market_left_coin3"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="USD"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/color_darkGrey"
        app:layout_constraintTop_toBottomOf="@+id/tv_market_left_coin2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_market_left_coin4"/>
    <TextView
        android:id="@+id/tv_market_left_coin4"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="BTC"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/color_darkGrey"
        app:layout_constraintTop_toBottomOf="@+id/tv_market_left_coin3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_market_left_coin5"/>
    <TextView
        android:id="@+id/tv_market_left_coin5"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:text="ETH"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:background="@color/color_darkGrey"
        app:layout_constraintTop_toBottomOf="@+id/tv_market_left_coin4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ScrollView
        android:id="@+id/sv_market_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/K"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_market_left_coin3">
        <LinearLayout
            android:id="@+id/ll_market_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_Grey">

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
