<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp">
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/tv_row"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_coin"
        android:text="BTC"
        android:textSize="14sp"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/color_white"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_back"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintLeft_toLeftOf="@+id/tv_back"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/tv_fluctuation"
        android:text="+10.10%"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintLeft_toLeftOf="@+id/tv_back"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/tv_newPrice"
        android:text="35655.12"
        android:textSize="20sp"
        android:lines="1"
        android:ellipsize="none"
        android:maxLength="8"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_back"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintLeft_toRightOf="@+id/tv_coin"
        app:layout_constraintRight_toLeftOf="@+id/tv_bestAsk"/>
    <TextView
        android:id="@+id/tv_bestAsk"
        android:text="卖出："
        android:textSize="12sp"
        android:textColor="@color/color_Grey1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_back"
        app:layout_constraintBottom_toTopOf="@+id/tv_bestBid"
        app:layout_constraintRight_toLeftOf="@+id/tv_bestAskNum"/>
    <TextView
        android:id="@+id/tv_bestBid"
        android:text="买入："
        android:textSize="12sp"
        android:textColor="@color/color_Grey1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_bestAsk"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintRight_toLeftOf="@+id/tv_bestBidNum"/>
    <TextView
        android:id="@+id/tv_bestAskNum"
        android:text="35142.22"
        android:lines="1"
        android:ellipsize="none"
        android:maxLength="8"
        android:textSize="12sp"
        android:textColor="@color/color_lightGrey"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_back"
        app:layout_constraintBottom_toTopOf="@+id/tv_bestBidNum"
        app:layout_constraintRight_toRightOf="@+id/tv_back"/>
    <TextView
        android:id="@+id/tv_bestBidNum"
        android:text="34251.33"
        android:lines="1"
        android:ellipsize="none"
        android:maxLength="8"
        android:textSize="12sp"
        android:textColor="@color/color_lightGrey"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_bestAskNum"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintRight_toRightOf="@+id/tv_back" />
</android.support.constraint.ConstraintLayout>
