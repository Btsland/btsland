<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="已设置"
        android:gravity="center"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text"
        >
        <EditText
            android:id="@+id/ed_setDeal_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_setDeal_search"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="搜索"
            android:gravity="center"
            android:background="@drawable/select_login_btn"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_setDeal_coins"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lv_setDeal_newCoins"
        app:layout_constraintBottom_toTopOf="@+id/tv_setDeal_cancel">

    </ListView>
    <ListView
        android:id="@+id/lv_setDeal_newCoins"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@+id/lv_setDeal_coins"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_setDeal_confirm">

    </ListView>
    <TextView
        android:id="@+id/tv_setDeal_cancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/cancel"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textColor="@color/color_black"
        android:background="@drawable/select_login_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_setDeal_confirm"/>
    <TextView
        android:id="@+id/tv_setDeal_confirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/confirm"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textColor="@color/color_black"
        android:background="@drawable/select_login_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_setDeal_cancel"/>

</android.support.constraint.ConstraintLayout>
