<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >


    <View
        android:layout_width="0.5px"
        android:layout_height="30dp"
        android:background="#B8B8B8"
        android:visibility="visible" />

    <!--资产-->

    <TextView
        android:id="@+id/tv_asset_table"
        android:layout_width="80dip"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:text="1BTS"
        android:textSize="15sp"
        android:gravity="center"/>


    <View
        android:layout_width="0.5px"
        android:layout_height="30dp"
        android:background="#B8B8B8"
        android:visibility="visible" />


<!--换算值-->
    <TextView
        android:id="@+id/tv_scaled_Value_table"
        android:layout_width="80dip"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:text="1BTC"
        android:gravity="center"
        android:textSize="15sp" />



    <View
        android:layout_width="0.5px"
        android:layout_height="30dp"
        android:background="#B8B8B8"
        android:gravity="center"
        android:text="1btsCNY"
        android:visibility="visible" />


<!--供给占比-->
    <TextView
        android:id="@+id/tv_supply_Share_table"
        android:layout_width="80dip"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:text="1USD"
        android:gravity="center"
        android:textSize="15sp" />



    <View
        android:layout_width="0.5px"
        android:layout_height="30dp"
        android:background="#B8B8B8"
        android:visibility="visible" />




    <TextView
        android:id="@+id/tv_transfer_Accounts_table"
        android:layout_width="80dip"
        android:layout_height="30dp"
        android:textColor="@color/color_table_blue"
        android:text="转账"
        android:textSize="15sp"
        android:gravity="center"/>
    


    <View
        android:layout_width="0.5px"
        android:layout_height="30dp"
        android:background="#B8B8B8"
        android:visibility="visible" />



    <TextView
        android:id="@+id/tv_MarketOperation_table"
        android:layout_width="80dip"
        android:layout_height="30dp"
        android:textColor="@color/color_table_blue"
        android:text="充值"
        android:textSize="15sp"
        android:gravity="center"/>




</LinearLayout>






















