<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_purse"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <info.btsland.app.ui.view.MyConstraintLayout
            android:id="@+id/cl_purse"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v_purse_back"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:background="@drawable/blue_red"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <WebView
                android:id="@+id/iv_user_pho"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="30dp"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="@+id/v_purse_back"
                app:layout_constraintTop_toTopOf="@+id/v_purse_back"
                />

            <TextView
                android:id="@+id/tv_txt_purse_convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textColor="@color/color_Grey"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/iv_user_pho"
                app:layout_constraintBottom_toBottomOf="@+id/v_purse_back"
                app:layout_constraintTop_toBottomOf="@+id/iv_user_pho"
                />

            <TextView
                android:id="@+id/tv_purse_convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000CNY"
                android:textColor="@color/color_Grey"
                android:textSize="16sp"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="@+id/tv_txt_purse_convert"
                app:layout_constraintBottom_toBottomOf="@+id/tv_txt_purse_convert"
                app:layout_constraintLeft_toRightOf="@+id/tv_txt_purse_convert"
                />

            <TextView
                android:id="@+id/tv_purse_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_purse_convert"
                app:layout_constraintTop_toBottomOf="@+id/tv_purse_convert"/>


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_Grey"
                app:layout_constraintLeft_toRightOf="@+id/iv_user_pho"
                app:layout_constraintTop_toTopOf="@+id/iv_user_pho"
                app:layout_constraintRight_toRightOf="@+id/v_purse_back"
                app:layout_constraintBottom_toTopOf="@+id/tv_user_anotherName"
                />

            <TextView
                android:id="@+id/tv_user_anotherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/alias"
                android:textSize="20dp"
                android:gravity="center|left"
                android:textColor="@color/color_Grey"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                app:layout_constraintLeft_toLeftOf="@+id/tv_user_name"
                app:layout_constraintBottom_toBottomOf="@+id/iv_user_pho"
                app:layout_constraintRight_toRightOf="@+id/tv_user_name"
                />

            <ScrollView
                android:id="@+id/sv_purse"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/v_purse_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_user_logoff"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/tv_purse_allAsset"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/asset"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:background="@drawable/select_row_white"
                        android:textColor="@color/color_black"
                        android:drawableRight="@drawable/image_arrow_right"
                        android:drawableLeft="@drawable/image_purse_allpurse"
                        android:drawablePadding="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_purse_rw"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/accessrecord"
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/select_row_white"
                        android:textColor="@color/color_black"
                        android:drawableRight="@drawable/image_arrow_right"
                        android:drawableLeft="@drawable/image_purse_recharge"
                        android:drawablePadding="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_purse_deal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/tradingrecord"
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/select_row_white"
                        android:textColor="@color/color_black"
                        android:drawableRight="@drawable/image_arrow_right"
                        android:drawableLeft="@drawable/image_purse_business"
                        android:drawablePadding="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_purse_allRemain"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/wholeguadan"
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/select_row_white"
                        android:textColor="@color/color_black"
                        android:drawableRight="@drawable/image_arrow_right"
                        android:drawableLeft="@drawable/image_purse_guadan"
                        android:drawablePadding="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_purse_transfer_accounts"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/transfer_accounts"
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/select_row_white"
                        android:textColor="@color/color_black"
                        android:drawableRight="@drawable/image_arrow_right"
                        android:drawableLeft="@drawable/image_transfer"
                        android:drawablePadding="10dp"
                        />

                    <TextView
                        android:id="@+id/tv_purse_backup"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/look"
                        android:paddingLeft="8dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/select_row_white"
                        android:textColor="@color/color_black"
                        android:drawableRight="@drawable/image_arrow_right"
                        android:drawableLeft="@drawable/image_purse_backup"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>



            </ScrollView>

            <TextView
                android:id="@+id/tv_user_logoff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/logoff"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_transparent66"
                android:textColor="@color/black"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />


        </info.btsland.app.ui.view.MyConstraintLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_purse_login_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">
        <info.btsland.app.ui.view.MyConstraintLayout
            android:id="@+id/cl_purse_login_prompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa000000">
            <View
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_purse_prompt"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="@string/not_logged"
                android:textColor="@color/color_white2"
                android:textSize="26sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/tv_go_login"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/back"
                app:layout_constraintRight_toRightOf="@+id/back"
                app:layout_constraintTop_toTopOf="@+id/back"/>

            <TextView
                android:id="@+id/tv_go_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_red"
                android:gravity="center"
                android:text="@string/go_login"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_go_register"
                app:layout_constraintLeft_toLeftOf="@+id/back"
                app:layout_constraintRight_toRightOf="@+id/back"

                />

            <TextView
                android:id="@+id/tv_go_register"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:text="@string/go_register"
                android:textColor="@color/color_white"
                android:textSize="20sp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/back"
                app:layout_constraintLeft_toLeftOf="@+id/back"
                app:layout_constraintRight_toRightOf="@+id/back"

                />




        </info.btsland.app.ui.view.MyConstraintLayout>
    </FrameLayout>


</FrameLayout>


